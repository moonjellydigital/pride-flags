{
  "extends": ["stylelint-config-standard", "stylelint-config-html/astro"],
  "ignoreFiles": [
    "**/*.{ts,cts,mts}",
    "**/*.{js,mjs,cjs}",
    "**/*.json",
    "**/*.{yaml,yml}",
    "**/*.ttf",
    "**/*.{woff,woff2}",
    "**/LICENSE",
    "**/*.lock",
    "**/*.svg",
    "**/*.txt",
    "**/*.{md,mdx}",
    "dist/**/*"
  ],
  "rules": {
    "selector-class-pattern": null
  }
}
