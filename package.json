    "./CHANGELOG.md"
  ],
  "main": "pride-flags.css",
  "style": "pride-flags.css",
  "scripts": {
    "prepare": "husky || true",
    "astro:ci": "astro check",
    "fmt:ci": "bunx prettier --check .",
